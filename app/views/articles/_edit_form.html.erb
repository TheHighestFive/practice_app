<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow-lg p-3 mb-4 bg-info rounded", local: true) do |f| %>
        <div class="mb-3 row">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="mb-3 row">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
        
        <div class="mb-3 row">
          <%= f.label :category, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name, { prompt: "Make your selection from the list below (can be empty)"}, {multiple: true, size: 3, class: "form-select shadow rounded" } ) %>
          </div>
        </div>

        <div class="mb-3 text-center">
          <%= f.submit class: "btn btn-dark btn-lg"%>
        </div>

      <% end %>
    </div>

    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info text-center" %>
  </div>
</div>
