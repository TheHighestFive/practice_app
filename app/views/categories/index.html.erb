<h1 class="text-center text-white mt-4">Categories</h1>

<div class="flickr_pagination">
  <%= will_paginate @categories, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>

<div class="container">
  <% @categories.each do |category| %>
  <div class="row justify-content-md-center">
    <div class="col-4 mt-4">
      <div class="card text-center shadow p-0 mb-5 bg-dark rounded">
        <div class="card-body", id= "card-body">
          <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success fw-bold" %></h5>
        </div>
        <div class="card-footer text-muted", id= "card-footer">
          <small>Created <%= time_ago_in_words(category.created_at) %> ago,
            edited <%= time_ago_in_words(category.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

<div class="flickr_pagination">
  <%= will_paginate @categories, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>
