<h1 class="text-center mt-4 text-white">Log in</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-4 bg-info rounded", local: true) do |f| %>

        <div class="mb-3 row">
          <%= f.label :email, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="mb-3 row">
          <%= f.label :password, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>

        <div class="mb-3 text-center">
          <%= f.submit "Log in", class: "btn btn-dark btn-lg"%>
        </div>

      <% end %>
    </div>

    <%= link_to '[ Cancel and return to users listing ]', users_path, class: "text-primary text-center" %>
  </div>
</div>
